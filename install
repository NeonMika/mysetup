#!/bin/bash

sudo add-apt-repository -y universe
sudo add-apt-repository -y multiverse
sudo apt update

# https://wiki.ubuntuusers.de/Grafikkarten/Nvidia/nvidia/
sudo apt-get purge \*nvidia\* ; sudo apt-get install nvidia-driver-525 nvidia-settings # check if 525 should be updated

ansible-playbook -i hosts mysetup.playbook.yml
